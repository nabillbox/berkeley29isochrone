# cluster = Berkeley 29
# Distance [pc]	= 14871
# Reddening [mag]	= 0.157
# Distance modulus [mag] = 16.35
# Log Age = 9.025
# Metallicity = -0.44

dat_ber29 = np.loadtxt('berkeley 29 cmd.dat', unpack = True)
dat_ber29

Vm = dat_ber29[-6][:]
Bm = dat_ber29[-7][:]
zini = dat_ber29[0][:]
logL = dat_ber29[6][:]
logT = dat_ber29[7][:]
logAge = dat_ber29[2][:]

BV_cmd = Bm - Vm

plt.figure()
