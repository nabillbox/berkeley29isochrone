plt.title("HR Diagram of Berkeley 29 (CMD)")
plt.xlabel("B-V [mag]")
plt.ylabel(r"$M_v$ [mag]")
plt.xlim(3, 4)
plt.ylim(-4, 4)
plt.gca().invert_xaxis()
plt.show()


